<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_rides_cancel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scriptmall.cabuser.MyRidesCancelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_above="@+id/lin"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rel1"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/driver_img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shankar"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_cancel"
                    android:layout_toRightOf="@id/driver_img"
                    android:id="@+id/tvdriver_name"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cancelled"
                    android:scaleType="fitXY"
                    android:id="@+id/img_cancel"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <include layout="@layout/ui_line_black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/aa"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY"
                    android:id="@+id/cab_img"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto . Silver Sunny"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cab_img"
                    android:id="@+id/tvcab"/>

            </RelativeLayout>


            <include layout="@layout/ui_line_black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/rel_price">


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/rateimg"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="5dp"
                    android:tint="#be393939"
                    android:id="@+id/img_rate"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USHs 0"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_rate"
                    android:id="@+id/tvprice"/>

            </RelativeLayout>

            <include layout="@layout/ui_line_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:background="#ffffff">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:background="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toLeftOf="@+id/v1">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:src="@drawable/circle_white"
                            android:layout_gravity="center"
                            android:tint="#03de16"
                            android:textColor="#03de16"/>
                        <TextView
                            android:id="@+id/autoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:text="Pickup location"
                            android:textColor="#ce000000"
                            android:layout_gravity="center"
                            android:gravity="left|center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:background="#ffffff"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/v1">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:src="@drawable/circle_white"
                            android:tint="#c00"
                            android:layout_gravity="center"
                            android:textColor="#03de16"/>

                        <TextView
                            android:id="@+id/autoCompleteTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dp"
                            android:text="Drop Location"
                            android:textColor="#ce000000"
                            android:layout_gravity="center"
                            android:gravity="left|center"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/ui_line_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_marginBottom="50dp"/>

            <include layout="@layout/ui_line_black"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_above="@+id/rel_bottom">
        <include layout="@layout/ui_line_black"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:padding="5dp"
        android:id="@+id/rel_bottom">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/view1">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:background="#ffffff"
                android:drawableTop="@drawable/cancelbtn_tint_gray"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tracking"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/tracking_tint_gray"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toLeftOf="@+id/view2">-->
            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="use coupen"-->
            <!--android:background="#ffffff"-->
            <!--android:drawableTop="@drawable/offerbtn_tint_gray"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:id="@+id/btn_offer"/>-->
            <!--</RelativeLayout>-->
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="support"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/information_tint_gray"
                    android:layout_centerInParent="true"
                    android:id="@+id/btn_support"/>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
