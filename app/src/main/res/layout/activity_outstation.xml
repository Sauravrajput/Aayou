<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_outstation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context="com.scriptmall.cabuser.OutstationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/book">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:layout_toLeftOf="@+id/v1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:src="@drawable/circle_white"
                            android:layout_gravity="center"
                            android:tint="#03de16"
                            android:textColor="#03de16"/>
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="20dp"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:text="Pickup"/>-->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="13dp"
                        android:layout_marginLeft="5dp"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:background="#ffffff"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="#ffffff"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/v1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:src="@drawable/circle_white"
                            android:tint="#c00"
                            android:layout_gravity="center"
                            android:textColor="#03de16"/>
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="20dp"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:text="Drop "/>-->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/autoCompleteTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="13dp"
                        android:layout_marginLeft="5dp"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:background="#ffffff"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="#ffffff">
                <include layout="@layout/ui_line_black"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textSize="16dp"
                android:textColor="#464545"
                android:layout_marginLeft="5dp"
                android:text="Select date and time"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:id="@+id/textView2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">
                <include layout="@layout/ui_line_black"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:focusable="true" android:focusableInTouchMode="true"
                    android:layout_width="0px" android:layout_height="0px"/>


                <RadioGroup
                android:id="@+id/radiogender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">


                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_toLeftOf="@+id/v1">-->

                <RadioButton
                    android:id="@+id/radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Way"
                    android:layout_toLeftOf="@+id/v1"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    />
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="14dp"-->
                        <!--android:textColor="#464545"-->
                        <!--android:layout_marginLeft="25dp"-->
                        <!--android:layout_below="@+id/radio_male"-->
                        <!--android:text="Get dropprd off"/>-->
                <!--</LinearLayout>-->

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical"-->
                        <!--android:layout_toRightOf="@+id/v1">-->

                <RadioButton
                    android:id="@+id/radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round Trip"
                    android:layout_toRightOf="@+id/v1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"/>

                <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textSize="14dp"-->
                            <!--android:textColor="#464545"-->
                            <!--android:text="Keep car till return"-->
                            <!--android:layout_toRightOf="@+id/v1"-->
                            <!--android:layout_below="@+id/radio_female"-->
                            <!--android:layout_marginLeft="25dp"/>-->
                    <!--</LinearLayout>-->
            </RadioGroup>
                </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">
                <include layout="@layout/ui_line_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5sp"
                android:background="#ffffff"
                android:id="@+id/lin1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:tint="#5c5c5c"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Leave on"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    android:text="21-11-2017 6.30PM"
                    android:id="@+id/date_time_pick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff">
                <include layout="@layout/ui_line_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:padding="5sp"
                android:background="#ffffff"
                android:id="@+id/lin2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:tint="#5c5c5c"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Return by"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:id="@+id/date_time_drop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="#ffffff">
                <include layout="@layout/ui_line_black"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="16dp"
                android:textColor="#464545"
                android:layout_marginLeft="5dp"
                android:text="Select vehical type"
                android:layout_gravity="center"
                android:gravity="left|center" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffffff" />














        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Accept &amp; confirm"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>
