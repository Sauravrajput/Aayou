<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scriptmall.cabuser.SupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How can we help ?"
        android:paddingLeft="10dp"
        android:gravity="left|center"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#c0fafafa"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10dp"
        android:background="#0fbababa"
        android:layout_margin="5dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0fbababa">
                       <LinearLayout
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0px" android:layout_height="0px"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:drawableLeft="@drawable/tint_search"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:layout_margin="5dp"
                android:text=""
                android:textSize="15dp"
                android:hint="Search "
                android:textColor="#000000"
                android:id="@+id/autosearch"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

        </LinearLayout>

    <include layout="@layout/ui_line_black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse FAQ's"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="left|center"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#c0fafafa"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10dp"
        android:background="#0fbababa"
        android:layout_margin="10dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="#0fbababa">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

            </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
