<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scriptmall.cabuser.TrackingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/v1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:gravity="center"
                        android:src="@drawable/circle_white"
                        android:layout_gravity="center"
                        android:tint="#03de16"
                        android:textColor="#03de16"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:text="Pickup"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:background="#ffffff"
                    android:hint=""/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_above="@+id/card_bottom"
                    class="com.google.android.gms.maps.SupportMapFragment"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="@drawable/tvbox"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:src="@drawable/circle_white"
                            android:tint="#c00"
                            android:layout_gravity="center"
                            android:textColor="#03de16"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:text="Drop "/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/autoCompleteTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="13dp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:hint=""/>
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="10dp"
                    android:background="#0fbababa"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:id="@+id/card_bottom">
                    <TextView
                        android:id="@+id/tvprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:background="#ffffff"
                        android:text="Estimated cash to be paid:  USHs "
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="10dp"
                    android:background="#0fbababa"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="2dp"
                    android:layout_above="@+id/card_bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">

                            <TextView
                                android:id="@+id/tvcab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text=""
                                android:textColor="#000000"
                                android:layout_alignParentLeft="true"
                                android:gravity="left"/>
                            <TextView
                                android:id="@+id/tvotp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="  "
                                android:textColor="#000000"
                                android:background="@color/colorPrimary"
                                android:gravity="right"
                                android:padding="2dp"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="3dp">
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/v1"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/v1">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ambulance_lg"
                                    android:id="@+id/img"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="10dp"/>
                                <TextView
                                    android:id="@+id/tvcab_num"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15dp"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:padding="2dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_toRightOf="@+id/v1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/driver_img">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="13dp"
                                        android:text=""
                                        android:textColor="#000000"
                                        android:padding="2dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/tvdriver_name"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15dp"
                                            android:text=""
                                            android:textColor="#000000"
                                            android:padding="2dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:id="@+id/tvdriver_rating"/>

                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/star"
                                            android:tint="@color/colorPrimary"/>

                                    </LinearLayout>
                                    <!--<TextView-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:textSize="15dp"-->
                                    <!--android:text="Rating: 4.5"-->
                                    <!--android:textColor="#000000"-->
                                    <!--android:padding="2dp"-->
                                    <!--android:layout_gravity="center"-->
                                    <!--android:layout_marginLeft="5dp"-->
                                    <!--android:id="@+id/tvdriver_rating"/>-->

                                </LinearLayout>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/driver_logo"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/img_cancel"
                                    android:gravity="center"
                                    android:id="@+id/driver_img"
                                    />

                            </RelativeLayout>

                        </RelativeLayout>

                        <!--<include layout="@layout/ui_line_black"/>-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="#5f000000"
                            android:paddingTop="2dp"
                            android:id="@+id/rel_bottom">
                            <View
                                android:layout_width="2dp"
                                android:layout_height="1dp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/v2"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:layout_toLeftOf="@+id/v2">
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="call driver"
                                    android:background="#ffffff"
                                    android:drawableTop="@drawable/ic_local_phone_black"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/btn_call"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:layout_toRightOf="@+id/v2">
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="cancel"
                                    android:drawableTop="@drawable/cancelbtn"
                                    android:background="#ffffff"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/btn_cancel"/>

                            </RelativeLayout>


                        </RelativeLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_white"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="15dp"
                    android:padding="0.5dp"
                    android:id="@+id/sos">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/sos"/>
                </RelativeLayout>






            </RelativeLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>
